<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CameraUpload">

    <ImageView
            android:layout_width="0dp"
            android:layout_height="350dp"
            app:srcCompat="@drawable/common_google_signin_btn_icon_light_normal_background"
            android:id="@+id/cameraImageView" android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:scaleType="centerCrop"/>
    <Button
            android:text="Upload"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/uploadBtn" app:layout_constraintStart_toEndOf="@+id/cameraBtn"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp" android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/cameraBtn" android:onClick="uploadBtnClicked"/>
    <Button
            android:text="Take Photo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/cameraBtn"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/uploadBtn" android:layout_marginEnd="8dp"
            android:layout_marginStart="32dp" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/cameraImageView"/>
</android.support.constraint.ConstraintLayout>