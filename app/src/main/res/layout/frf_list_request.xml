<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="120dp"
                                             android:background="@android:color/darker_gray">

    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:id="@+id/faultType2" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:textSize="28sp" android:textAlignment="center"
            android:paddingTop="10dp" android:paddingBottom="10dp" android:fontFamily="@font/roboto_medium"
            android:background="@color/colorAccent" android:textColor="@android:color/black"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:id="@+id/faultType" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:textSize="28sp" android:textAlignment="center"
            android:paddingTop="10dp" android:paddingBottom="10dp" android:fontFamily="@font/roboto_medium"
            android:background="@color/colorAccent" android:textColor="@android:color/black" tools:text="faultType"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/reportedBy" app:layout_constraintStart_toEndOf="@+id/siteName"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/faultType"
            app:layout_constraintBottom_toBottomOf="parent" android:textAlignment="center" android:paddingTop="10dp"
            android:textSize="24sp" android:fontFamily="@font/roboto_medium"
            android:background="@android:color/holo_blue_light" android:textColor="@android:color/white"
            tools:text="reportedBy"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/siteName"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/reportedBy"
            app:layout_constraintTop_toBottomOf="@+id/faultType"
            app:layout_constraintBottom_toBottomOf="parent" android:textAlignment="center" android:paddingTop="10dp"
            android:textSize="24sp" android:fontFamily="@font/roboto_medium" android:background="@color/colorPrimary"
            android:textColor="@android:color/white" tools:text="siteName"/>
</android.support.constraint.ConstraintLayout>